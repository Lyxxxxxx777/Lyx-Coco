/* pages/mygiftcard/mygiftcard.wxss */
div{
    display: block;
}
.toptext{
    margin: 20px;
    font-size: 16px;
    font-weight: 600;

}
.cardbox{
    padding: 0 0 90px 0;
}
.mengban{
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0,0,0,0.7);
}
.detailbox{
    width: calc( 1.6 * 45vw );
    height: calc( 2.1 * 66vw );
    /* background: repeating-linear-gradient(
                0deg,
                rgba(255,255,255,0) 0%,
                rgba(0,0,0,0.9) 50%,
                rgba(0,0,0,0.9) 100%
            ); */
    background: rgba(0,0,0,0.9);
    color: #111;
    position: fixed;
    left: 50%;
    top: 45%;
    transform: translate(-50%,-50%);
    z-index: 34;
    border-radius: 21px;
    text-align: center;
    padding: 30px;
    box-sizing: border-box;
}
.detailbox .dettiltle{
    margin: 0;
    color: #FFCA18;
    font-size: 30px;
    font-weight: 600;
}
.detailbox .detprice{
    color: #FFCA18;
    font-size: 36px;
    font-weight: 600;
    margin: 5px 0 0;
}
.detailbox .detprice span{
    font-size: 26px;
    vertical-align: 6px;
}
.detailbox .detdes{
    font-size: 20px;
    margin: 10px 0 0;
    padding:0 20px;
    color: #ccc;
}
.detailbox .dettime{
    font-size: 14px;
    /* position: absolute;
    bottom: 10px;
    left: 10px; */
    color: #ccc;
    margin: 15px 0 0;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
.detailbox .dettime b{
    color: #999;
}
.detailbox .dettime span{
    font-weight: 600;
    color: #ccc;
}
.detailbox .dettime .nick{
    font-size: 24px;
    font-weight: 600;
    color: #ffa318;
}
.detailbox .dettime .bles{
    font-size: 16px;
    color: #eee;
}
.detailbox .givegive{
    position: absolute;
    left: 10% ;
    bottom: 20px;
    background: #fff;
    width: 80px;
    height: 40px;
    line-height: 40px;
    font-size: 16px;
    font-weight: 600;
    color: #000;
    border-radius: 20px;
}
.detailbox .useuse{
    position: absolute;
    right: 10% ;
    bottom: 20px;
    background: #fff;
    width: 80px;
    height: 40px;
    line-height: 40px;
    font-size: 16px;
    font-weight: 600;
    color: #000;
    border-radius: 20px;
}
.closebigcard{
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(0,0,0,0.7);
    color: #fff;
    line-height: 38px;
    text-align: center;
    font-size: 26px;
    position: fixed;
    top: 15px;
    right: 10px;
    z-index: 99;
}

ul{
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    padding: 0 10px;
    /* position: relative; */
}
li{
    width: 45vw;
    height: 66vw;
    box-shadow: 0px 5px 10px 3px #ccc;
    border-radius: 10px;
    overflow: hidden;
    margin: 8px 0;
    /* position: relative; */
}
li.bigbig{
    position: fixed;
    left: 50%;
    top: 44%;
    box-shadow: 0px 0px 0px 0px #FFF499;
    transform: translate(-50%,-50%) scale(2.1);
    transition: transform 0.5s;
    z-index: 28;
}
li.mohule{
    filter:brightness(.7) blur(5px);
}
li.newnew{
    animation: flash 3s linear 0s infinite;
}
/* @keyframes */
@keyframes flash {
    0% {
        box-shadow: 0px 0px 10px 8px #fccd35;
    }
    50% {
        box-shadow: 0px 0px 10px 8px #ccc;
    }
    100% {
        box-shadow: 0px 0px 10px 8px #f0c740;
    }

}
image{
    width: 45vw;
}
.btmbox{
    position: fixed;
    bottom: 30px ;
    left: 50%;
    transform: translate(-50%);
    width: 50vw;
    height: 50px;
    line-height: 50px;
    text-align: center;
    background: #000;
    color: #fff;
    box-shadow: 0px 5px 10px 2px #777;
    border-radius: 25px;
    font-size: 16px;
    font-weight: 600;
    transition: all 1s;
    z-index: 0;
}
.btmbox.seecard{
    background: #fff;
    color: #000;
}


.userd{
    /* left: -15%;
    top: 25%; */
    margin: -125% 0 0 -15%;
    width: 130%;
    height: 50px;
    background: rgba(0,0,0,0.7);
    color: #ccc;
    font-size: 34px;
    font-weight: 700;
    line-height: 50px;
    text-align: center;
    transform: rotate(-20deg);
}

/* //兑换CKD */
.exchangebox{
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0,0,0,0.7);
}
.exchangebox .exchange{
    width: 300px;
    height: 280px;
    margin: 35% auto;
    background: #fff;
    border-radius: 15px;
    box-shadow: 0px 5px 10px 2px #333;
    overflow: hidden;
}
.exchangebox .exchange .closeex{
    margin: 5px 0 0 15px;
    font-size: 30px;
}
.exchangebox .exchange .dhlpk{
    text-align: center;
    font-size: 22px;
    margin: 20px 0 0;
}
.exchangebox .exchange .cdk{
    width: 260px;
    height: 40px;
    background: #eee;
    margin: 20px auto 0;
    border-radius: 20px;
    /* text-indent: 1em; */
    padding: 0 0 0 30px;
    box-sizing: border-box;
}
.exchangebox .exchange .exbtn{
    width: 100px;
    height: 40px;
    background: #000;
    color: #fff;
    border-radius: 25px;
    text-align: center;
    line-height: 40px;
    margin: 40px auto 0;
    z-index: 40;
}

/* 兑换成功后 收到礼物 */
.getgiftbox{
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0,0,0,0.8);
}
.getgiftbox .opengift{
    margin-top: 30vh;
    text-align: center;
    font-size: 140px;
}
.getgiftbox .cinfobox .ctop{
    color: #eee;
    width: 100%;
    font-size: 18px;
    text-align: center;
    position: absolute;
    top: 20px;
    padding: 0 20px ;
    box-sizing: border-box;
}
.getgiftbox .cinfobox .ctop .nick{
    color: #ffa318;
    font-size: 28px;
    font-weight: 600;
}
.getgiftbox .cinfobox .ctop .cname{
    color: #ff9318;
    font-size: 30px;
    font-weight: 600;
}
.getgiftbox .cinfobox .cbtm{
    color: #aaa;
    width: 100%;
    text-align: center;
    position: absolute;
    top: calc( 20px + 1.4 * 66vw + 15%);
    padding: 0 20px ;
    box-sizing: border-box;
    font-size: 14px;
}
.getgiftbox .cinfobox .cbtm .cble{
    font-weight: 600;
    font-size: 18px;
    color: #eee;
}
.getgiftbox .cinfobox .cbtm .cpri{
    color: #ff9318;
    font-size: 30px;
    font-weight: 600;
}

.cimgbox{
    position: absolute;
    top: -50%;
    left: 50%;
    transform: translate(-50%) scale(0.1);
    border-radius: 10px;
    overflow: hidden;
    width: calc(1.4 * 45vw );
    height: calc( 1.4 * 66vw);
    border-top: 3px solid #ccc;
    border-right: 4px solid #aaa;
    /* border-bottom: 4px solid #999; */
    box-shadow: 0px 5px 50px 3px rgb(255, 238, 162);
    transition: all 1.5s;
}
.cimgbox.fall{
    top: 15%;
    transform: translate(-50%) scale(1);
}
.cimgbox image{
    width: 100%;
}
.shouxia{
    position: fixed;
    bottom: 30px ;
    left: 50%;
    transform: translate(-50%);
    width: 50vw;
    height: 50px;
    line-height: 50px;
    text-align: center;
    background: #FFCA18;
    color: #000;
    /* box-shadow: 0px 5px 10px 2px #777; */
    border-radius: 25px;
    font-size: 16px;
    font-weight: 600;
    z-index: 290;
}