/* pages/giftcard/giftcard.wxss */
div{
    display: block;
}
.toptext{
    margin: 20px;
    font-size: 16px;
    font-weight: 600;

}
.cardbox{
    padding: 0 0 90px 0;
}
.mengban{
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0,0,0,0.7);
}
.detailbox{
    width: calc( 1.6 * 45vw );
    height: calc( 1.3 * 66vw );
    background: rgba(0,0,0,0.7);
    color: #111;
    position: fixed;
    left: 50%;
    top: 46%;
    transform: translate(-50%,-50%);
    z-index: 24;
    border-radius: 21px;
    text-align: center;
}
.detailbox .dettiltle{
    margin: 35px 0 0;
    color: #FFCA18;
    font-size: 30px;
    font-weight: 600;
}
.detailbox .detprice{
    color: #FFCA18;
    font-size: 36px;
    font-weight: 600;
    margin: 10px 0 0;
}
.detailbox .detprice span{
    font-size: 26px;
    vertical-align: 6px;
}
.detailbox .detdes{
    font-size: 20px;
    margin: 10px 0 0;
    padding:0 20px;
    color: #ccc;
}
.detailbox .dettime{
    font-size: 14px;
    /* position: absolute;
    bottom: 10px;
    left: 10px; */
    color: #aaa;
    margin: 10px 0 0;
}
.detailbox .buybuy{
    position: absolute;
    left: 50% ;
    bottom: 20px;
    transform: translate(-50%);
    background: #FFCA18;
    width: 80px;
    height: 40px;
    line-height: 40px;
    font-size: 18px;
    font-weight: 600;
    color: #fff;
    border-radius: 20px;
}
.closebigcard{
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(0,0,0,0.7);
    color: #fff;
    line-height: 38px;
    text-align: center;
    font-size: 26px;
    position: fixed;
    top: 15px;
    right: 10px;
    z-index: 99;
}

ul{
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    padding: 0 10px;
    /* position: relative; */
}
li{
    width: 45vw;
    height: 66vw;
    box-shadow: 0px 5px 10px 3px #ccc;
    border-radius: 10px;
    overflow: hidden;
    margin: 8px 0;
}
li.bigbig{
    position: fixed;
    left: 50%;
    top: 44%;
    box-shadow: 0px 0px 0px 0px #FFF499;
    transform: translate(-50%,-50%) scale(2.1);
    transition: transform 0.5s;
}
image{
    width: 45vw;
}
.btmbox{
    position: fixed;
    bottom: 30px ;
    left: 50%;
    transform: translate(-50%);
    width: 50vw;
    height: 50px;
    line-height: 50px;
    text-align: center;
    background: #000;
    color: #fff;
    box-shadow: 0px 5px 10px 2px #777;
    border-radius: 25px;
    font-size: 16px;
    font-weight: 600;
    transition: all 1s;
}
.btmbox.seecard{
    background: #fff;
    color: #000;
}