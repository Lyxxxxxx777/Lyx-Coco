/* pages/address/address.wxss */
page{
    background: #F2F2F2;
}
div{
    display: block;
}
.top{
    display: block;
    background: #fff;
    position: fixed;
    top: 0 ;
    left: 0;
    z-index: 777;
}
.searchbox{
    display: block;
    width: 90vw;
    height: 40px;
    background: #F8F7F7;
    border-radius: 20px;
    margin: 20px auto 0 auto;
}
.searchbox image{
    display: inline-block;
    width: 20px;
    vertical-align: top;
    margin: 10px 10px 0 10px;
}
.searchbox input::-webkit-input-placeholder { 
    /* WebKit browsers */ 
    color: #ccc; 
}
.searchbox input{
    font-size: 14px;
    width: 75vw;
    height: 40px;
    display: inline-block;
}
.choosetab{
    display: block;
    width: 300px;
    height: 40px;
    line-height: 40px;
    text-align: center;
    font-size: 14px;
    font-weight: 900;
    display: flex;
    justify-content: space-around;
    margin: 0 auto;
}
.choosetab .nearby{
    display: block;
    width: 100px;
}
.choosetab .collection{
    display: block;
    width: 100px;
}
.choosetab>div.active{
    color: #FF8305;
    border-bottom: 3px solid #FF8305;
}
.bottom{
    margin-top: calc(60vw + 110px);
    display: block;
}
.bottom ul{
    display: block;
    width: 94vw;
    margin: 0 auto;
}
.bottom ul li{
    display: block;
    width: 94vw;
    /* height: 130px; */
    padding: 0 0 15px 0;
    border-radius: 10px;
    background-color: #fff;
    margin: 0 0 3vw 0;
    overflow: hidden;
    position: relative;
}
.bottom ul li:hover{
    background: #FAFAFA;
}
.bottom ul li .sname{
    display: block;
    font-size: 18px;
    font-weight: 600;
    margin: 20px 0 0 15px;
}
.bottom ul li .sposition{
    display: block;
    width: 70vw;
    font-size: 12px;
    color: #B5B5B5;
    margin: 10px 0 0 15px;
}
.bottom ul li .shours{
    display: block;
    font-size: 12px;
    color: #B5B5B5;
    margin: 10px 0 0 15px;
}
.bottom ul li .sdistance{
    font-size: 12px;
    color: #B5B5B5;
    position: absolute;
    right: 15PX;
    top: 20PX;
}

/* 点击显示 display */
.bottom ul li .clickshowbox{
    width: 94vw;
    height: 150px;
    position: relative;
    right: 0;
    top: 0px;
    display: block;
}
.bottom ul li .rightimage{
    display: block;
    width: 75px;
    height: 150px;
    border-left: 1px dashed #ccc;
    position: absolute;
    right: 0;
    top: -50px;
    display: flex;
    justify-content: space-around;
    flex-direction: column;
}
.bottom ul li .rightimage>div{
    width: 35px;   
    height: 35px;
    border-radius: 50%;
    margin: 0 auto;
}
.bottom ul li .rightimage .call{
    background: #FFE6CD url(https://s3.ax1x.com/2021/03/08/6lRIW4.png) no-repeat center center;
    background-size: 50%;
}
.bottom ul li .rightimage .collectionthis{
    background: #FFE6CD url(https://s3.ax1x.com/2021/03/08/6lRvFO.png) no-repeat center 60%;
    background-size: 50%;
    
}
.bottom ul li .rightimage .distance{
    background: #FFE6CD url(https://s3.ax1x.com/2021/03/08/6lR7l9.png) no-repeat 40% 60%;
    background-size: 50%;

}
.bottom ul li .noworlater{
    display: block;
    position: absolute;
    margin-left: 15px;
}
.bottom ul li .noworlater p{
    display: block;
    font-size: 14px;
    color: #676767;
    margin: 15px 0 10px 0;
}
.bottom ul li .noworlater label{
    display: block;
    font-size: 14px;
    margin:0 0 10px 0;
    color: #676767;
}
.bottom ul li .choosedrinkbtn{
    display: block;
    position: absolute;
    width: 270px;
    height: 36px;
    line-height: 36px;
    text-align: center;
    background: #FF8305;
    color: #fff;
    font-size: 14px;
    border-radius: 30px;
    position: absolute;
    bottom: 0px;
    left: 50%;
    transform: translate(-50%);
}


map{
    width: 100vw;
    height: 60vw;
}