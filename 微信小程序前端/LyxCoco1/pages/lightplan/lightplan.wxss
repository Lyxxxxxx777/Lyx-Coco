/* pages/lightplan/lightplan.wxss */
page{
    background: #F4F4F4;
}
.headbg{
    display: block;
    width: 100vw;
    height: 60vw;
    background:url(https://s3.ax1x.com/2021/03/08/6lWVk8.jpg) no-repeat center center ;
    background-size: 100%;
}
.beefbox{
    display: block;
    width: 90vw;
    height: 40vw;
    background: #fff;
    border-radius: 10px;
    margin: -30px auto 0;
    box-shadow: 0px 5px 10px 2px #CFCFCF;
}
.beefbox>p{
    display: block;
    text-align: center;
    /* font-weight: 600; */
    font-size: 16px;
    color: #6C6C6C;
    padding: 22px 0;
}
.beefbox .tips{
    display: block;
    text-align: center;
    color: #7A7A7A;
    font-size: 12px;
}
.beefbox .tips .showtips{
    color: #F79B45;
}
.beefbox .fivebeef{
    width: 250px;
    height: 30px;
    margin: 20px auto 0;
    display: flex;
    justify-content: space-between;
    background-image: linear-gradient(0deg,
    white 0%,
    white 45%,
    #ddd 45%,
    #ddd 55%,
    white 55%,
    white 100%
    );
}
.beefbox .fivebeef .beef{
    display: block;
    border-radius: 50%;
    width: 30px;
    height: 30px;
    box-sizing: border-box;
    /* border: 3px solid #FFD45C; */
    background-size: 100%;
    background: rgb(233, 233, 233);
    /* background-image: linear-gradient(-20deg, #00cdac 0%, #8ddad5 100%); */
}
.beefbox .fivebeef .beef .noin{
    border: 3px solid #ddd;
}
.btn{
    width: 90vw;
    height: 40px;
    line-height: 40px;
    display: block;
    font-size: 16px;
    color: #fff;
    background-color: #A3A3A3;
    border-radius: 20px;
    margin:  20px auto;
    text-align: center;
}
.btn.act{
    background-color: #F79B45;
}
.line{
    display: block;
    width: 100vw;
    height: 1px ;
    background: #C7C8C9;
}
.emptybox{
    width:30% ;
    display: block;
    margin: 80px auto;
}